{
    // lower label width makes preview window more readable
    "copilot.timeout": 10000,
    // add ".root" to make it possible by creating a file named ".root" in the root of the workspace
    "workspace.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json",
        ".root"
    ],
    "suggest.labelMaxLength": 37,
    // highest priority to remove the delay of completion
    "copilot.priority": 4096,
    // enable cmake lsp
    "cmake.lsp.enable": true,
    "cmake.lsp.serverPath": "cmake-language-server",
    // enable semantic highlight
    "semanticTokens.enable": true,
    // highest priority to remove the delay of semantic highlight
    "semanticTokens.highlightPriority": 4096,
    // don't show by default
    "inlayHint.display": false,
    // clangd's snippets are trash, don't use this
    "clangd.disableSnippetCompletion": true,
    // enable code lens
    // this is not supported by my vim version
    // "codeLens.enable": true,
    // don't ignore dot files
    "coc.source.file.ignoreHidden": false,
    // all files use word completion
    "coc.source.word.filetypes": null,
    // python formatter settings
    "python.formatting.autopep8Args": [
        "--max-line-length=100",
    ],
    "suggest.noselect": false,
    // refresh diagnostic information in insert mode
    "diagnostic.refreshOnInsertMode": true,
    // those are maek coc-git use the icons of vim-gitgutter
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    // diagnostic-languageserver
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        // "email": "languagetool",
        "markdown": [
            "write-good",
            "markdownlint"
        ],
        "sh": "shellcheck",
        // "elixir": ["mix_credo", "mix_credo_compile"],
        // "eelixir": ["mix_credo", "mix_credo_compile"],
        // "php": ["phpstan", "psalm"],
        "yaml": [
            "yamllint"
        ],
        "cmake": [
            "cmake-lint",
            "cmakelint"
        ],
        // "systemd": "systemd-analyze",
    },
    // not used now
    // "diagnostic-languageserver.formatFiletypes": {
    //     "dart": "dartfmt",
    //     "elixir": "mix_format",
    //     "eelixir": "mix_format",
    //     "python": ["black", "isort"],
    //     "lua": "lua-format",
    //     "sh": "shfmt",
    //     "blade": "blade-formatter",
    //     "cmake": "cmake-format",
    // }
}
